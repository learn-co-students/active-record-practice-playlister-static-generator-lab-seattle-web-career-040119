<h1><%= @artist.name %></h1>
<ul>
  <% @artist.genres.each do |genre| %>
  <li><a href="genres/<%=genre.to_slug%>.html"><%=genre.name%></a></li>
  <% end %>
</ul>
<br />

<ul>
  <% @artist.songs.each do |song| %>
  <li>
    <a href="songs/<%=song.to_slug%>.html"
      ><%=song.artist.name%> - <%=song.name%> - <%=song.genre.name%></a
    >
  </li>
  <% end %>
</ul>
